<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_main"
    tools:context="com.car.sabores.activities.ListActivity">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/ivIconTool"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_2"
        app:riv_corner_radius="30dp"/>

    <!--<ImageView
        android:id="@+id/ivIconMenu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        android:src="@drawable/ic_menu"/>-->

    <ImageView
        android:id="@+id/ivIconCarrito"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/ic_car"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/ivIconTool"/>

    <ProgressBar
        android:id="@+id/pbConexion"
        style="?attr/progressBarStyle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

</RelativeLayout>